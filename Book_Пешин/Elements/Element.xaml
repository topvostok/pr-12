<UserControl x:Class="Book_Пешин.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Book_Пешин.Elements"
             mc:Ignorable="d">
    <Grid Height="100" Background="#FF6AADED" Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="tbName" Text="Наименование: Название книги" 
                   Margin="10,10,10,0" VerticalAlignment="Top"
                   Foreground="White" FontWeight="Bold" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="tbGenre" Text="Жанр: Список жанров" 
                   Margin="10,36,5,10" Foreground="White" TextWrapping="Wrap"
                   Grid.Column="0"/>

        <TextBlock x:Name="tbAuthor" Text="Автор: Список авторов" 
                   Margin="5,36,10,10" Foreground="White" TextWrapping="Wrap"
                   Grid.Column="1"/>
    </Grid>
</UserControl>