<Window x:Class="Book_Пешин.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Book_Пешин"
        mc:Ignorable="d"
        Title="Каталог книг" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid Margin="0,0,0,0" Height="120" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="Поиск по наименованию:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Сортировка:" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

            <TextBox x:Name="tbSearch" KeyUp="Search_Book" Height="23"
                     Margin="10,36,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Grid.ColumnSpan="3"/>

            <ComboBox x:Name="cbAuthors" Margin="10,90,10,0" VerticalAlignment="Top" SelectionChanged="SelectionChanged" />
            <ComboBox x:Name="cbGenres" Margin="10,90,10,0" VerticalAlignment="Top" Grid.Column="1" SelectionChanged="SelectionChanged" />
            <ComboBox x:Name="cbYear" Margin="10,90,10,0" VerticalAlignment="Top" Grid.Column="2" SelectionChanged="SelectionChanged" />
        </Grid>

        <ScrollViewer Margin="0,120,0,0">
            <StackPanel x:Name="spBooks">
                <!-- Здесь будут отображаться элементы книг -->
            </StackPanel>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top">
            <Button x:Name="btnSave" Content="Сохранить в файл" Click="BtnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnLoad" Content="Загрузить из файла" Click="BtnLoad_Click"/>
        </StackPanel>
    </Grid>
</Window>